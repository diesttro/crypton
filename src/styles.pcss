@import 'tailwindcss/base';
@import 'tailwindcss/components';
@import 'tailwindcss/utilities';

body {
  @apply font-body font-light text-gray-900 bg-dark-purple;
}

h1 {
  @apply text-5xl font-black;
}

input,
table {
  @apply w-full rounded-md bg-gray-200;
}

th,
td {
  @apply px-5 py-3 text-left;
}

th {
  @apply font-black;
}
